
<div class="login-all">
  <div class="sprouts-name logo-sprouts login-logo">
    <%= image_tag "monstera.png", class: "logo-image-login" %>
    <%= link_to plants_path, class: "sprouts-name", id: "sprouts-toggle" do %>
    <h1 class="sprouts-text">SPROUTS </h1>
  <% end %>
    <h3>We grow together </h3>
  </div>

  <div class="login-page-main">
    <div>
      <h2></h2>
    </div>

      <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name), data: { turbo: :false }) do |f| %>
        <div class="form-inputs">
          <%= f.input :email,
                    required: false,
                    autofocus: true,
                    input_html: { autocomplete: "email" },
                    placeholder: 'Your email',
                    label: false %>
        <%= f.input :password,
                    required: false,
                    input_html: { autocomplete: "current-password" },
                    placeholder: 'Your password',
                    label: false %>
          <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
        </div>

        <div class="form-actions">
          <%= f.button :submit, "LOG IN", class:"btn-login" %>
        </div>
      <% end %>
    <div class="devise-links">
    <%= render "devise/shared/links" %>
    </div>
  </div>
</div>

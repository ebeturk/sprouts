<%= form_for @user, html: { multipart: true, class: "card-trip" } do |f| %>
  <img src="https://images.unsplash.com/photo-1551970634-747846a548cb?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=2070&q=80" />
  <div class="card-trip-infos">
    <div class="card-trip-user"
      <% if @user.photo.present? %>
        style="background-image: url('<%= cl_image_path @user.photo.key, width: 100, height: 100, crop: :fill %>')">
      <% end %>
      <div class="form-group">
        <label class="btn-sunny" for="user_avatar">Change</label>
        <%= f.file_field :avatar, id: "user_avatar", class: "d-none" %>
      </div>
    </div>

    <div class="form-group">
      <%= f.text_field :username, class: "form-control-username" %>
    </div>

    <div class="about-me-edit">
      <h3>About Me</h3>

      <div class="form-group">
        <%= f.text_area :description, class: "form-control-description" %>
      </div>

    </div>

      <%= f.submit "Update Profile", class: "btn btn-success" %>
      <% end %>
  <div class="nav-buttons" id="add-plant-button">
    <%= link_to "ðŸª´ Add another Plant of Yours ðŸª´", new_plant_path%>
  </div>
</div>
